{
   "name": "deeeep.io",
   "productName": "Deeeep.io Desktop App",
   "version": "1.5.7",
   "author": "SirReadsALot",
   "description": "The Deeeep.io Desktop Client",
   "main": "deep.js",
   "scripts": {
      "start": "electron-builder .",
      "pack": "electron-builder --dir",
      "dist": "electron-builder"
   },
   "build": {
      "productName": "Deeeep.io_Desktop_Client",
      "appId": "io.deeeep.desktop",
      "files": [
         "package.json",
         "splashIntro.html",
         "deep.js",
         "build/icon.ico",
         "build/splashIntro_resized.png",
         "installerIcon.ico",
         "exstore.html",
         "assetswapper.html"
      ],
      "nsis": {
         "oneClick": false,
         "allowToChangeInstallationDirectory": true,
         "createDesktopShortcut": true,
         "installerIcon": "build/installerIcon.ico",
         "uninstallerIcon": "build/installerIcon.ico",
         "runAfterFinish": false
      }
   },
   "dependencies": {
      "discord-rpc": "^3.2.0"
   },
   "devDependencies": {
      "electron": "^12.0.1"
   }
}

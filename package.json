{
   "name": "deeeep.io",
   "productName": "Deeeep.io Desktop App",
   "version": "1.5.3",
   "author": "SirReadsALot",
   "description": "The Deeeep.io Desktop Client",
   "main": "deep.js",
   "scripts": {
      "start": "electron-builder .",
      "pack": "electron-builder --dir",
      "dist": "electron-builder"
   },
   "build": {
      "productName": "Deeeep.io Desktop Client",
      "appId": "io.deeeep.desktop",
      "files": [
         "!build/background.bmp",
         "!build/banner.bmp",
         "!build/set.png",
         "!build/icons/linux/1024x1024.png",
         "!build/icons/mac/icon.icns",
         "!build/icons/win/icon.png",
         "!node_modules",
         "!!BUILD.cmd",
         "!!INSTALL.cmd",
         "!!BUILD_EXE.cmd"
      ],
      "nsis": {
         "oneClick": false,
         "allowToChangeInstallationDirectory": true,
         "createDesktopShortcut": true,
         "installerIcon": "build/installerIcon.ico",
         "uninstallerIcon":"build/installerIcon.ico",
         "runAfterFinish": false
      }
   },
   "dependencies": {
      "discord-rpc": "^3.2.0",
      "electron-updater": "^4.3.8"
   },
   "devDependencies": {
      "electron": "^12.0.1"
   }
}
